<%- include('partials/header'); -%>

<div class='container py-2'>
    <header class='jumbotron'>
        <div class='container'>
            <h1>This is the Campgrounds page!</h1>
            <p>These are some of our choices.</p>
            <a class='btn btn-primary btn-large' href="campgrounds/new">Click to add new campground</a>
        </div>
    </header>
    <div class="row text-center">
    <% campgrounds.forEach(function(campground){ %>
        <div class='col-sm-6 col-md-3'>
            <figure class="img-thumbnail">
                <img src="<%= campground.link %>" class="img-fluid" style="width:500px; height:180px;" alt="campground">
                <div class="img-caption">
                    <h5><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </div>
            </figure>
        </div>
    <% }); %>
    </div>
</div>
<%- include('partials/footer'); -%>